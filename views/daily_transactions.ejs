<!DOCTYPE html>
<html>
<head>
    <% include ./partials/head.ejs %>
    <title>Padmavati Hospital | Daily Transactions</title>
</head>

<body class="fixed-navbar fixed-sidebar">
    <% include ./partials/user_header.ejs %>
    <% include ./partials/user_nav.ejs %>
    <!-- Main Wrapper -->
    <div id=wrapper>
        <div class="small-header transition animated fadeIn">
            <div class=hpanel>
                <div class=panel-body>
                    <h2 class="font-light m-b-xs">Daily Transactions</h2> <small>Today's transactions</small> </div>
            </div>
        </div>
        <div class="content animate-panel">
            <div>
                <div class=row>
                    <div class="col-lg-12">
                        <div class="hpanel">
                            <div class="panel-body">
                                <div class="table-responsive">
                                    <table cellpadding="1" cellspacing="1" class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>Name</th>
                                                <th>City</th>
                                                <th>Gender</th>
                                                <th>Date of birth</th>
                                                <th>Service</th>
                                                <th>Ammount</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% for (var  i=0; i<patients.length; i++) { %>
                                                <tr>
                                                    <td><%= patients[i].first_name + ' ' + patients[i].last_name %></td>
                                                    <td><%= patients[i].city %></td>
                                                    <td><%= patients[i].gender %></td>
                                                    <td><%= patients[i].dob %></td>
                                                    <td><%= services[i].name %></td>
                                                    <td><%= services[i].price %></td>
                                                </tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                                <div style="margin: 0" class=hr-line-dashed></div>
                                <h4 style="float: right;">Total amount: Rs. <%= amount %></h4>
                            </div>
                            <div class="panel-footer">
                                Table - <%= patients.length %> rows
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Footer-->
        <footer class=footer>&copy; 2016 Padmavati Hospital</footer>
    </div>
</body>

</html>
